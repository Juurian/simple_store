<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">


<div class="container mt-4">
  <h1><%= @product.title %></h1>

  <div class="card">
    <div class="card-body">
      <h5 class="card-title">Description</h5>
      <p class="card-text"><%= @product.description %></p>
    </div>
  </div>

  <ul class="list-group mt-3">
    <li class="list-group-item"><strong>Price:</strong> $<%= number_with_precision(@product.price, precision: 2) %></li>
    <li class="list-group-item"><strong>Stock Quantity:</strong> <%= @product.stock_quantity %></li>
  </ul>
  <br>
  <a href="<%= products_path %>" class="btn btn-secondary mb-3">Back</a>
</div>
